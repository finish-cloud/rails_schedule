<h2>スケジュール編集</h2>

<%= form_for @post do |f| %>
<table>
  <tr>
    <th><%= f.label :title, "タイトル" %></th>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th> <%= f.label :content, "内容" %></th>
    <td><%= f.text_field :content %></td>
  </tr>
</table>
<div>
  <ul>
    <li><%= f.submit "編集を完了する" %></li>
    <li><%= link_to "ユーザー情報一覧に戻る", :posts %></li>
  </ul>
</div>
<% end %>